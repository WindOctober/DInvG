variable [ x 
           y ]

Location l1
  x = 1
  y = 50

Location l2

Location le

transition t1_1: l1,
	
   x <= 49
  'x <= 49
  'x  = x + 1
  'y  = y

transition t1_2: l1,l2,

   x <= 49
  50 <= 'x
  'x  = x + 1
  'y  = y

transition t2_2: l2,

  50 <=  x
   x <= 99
  50 <= 'x
  'x <= 99
  'x  = x + 1
  'y  = y + 1

transition t2_e: l2,le,
	
   50 <=  x
    x <= 99
  100 <= 'x
   'x  =  x + 1
   'y  =  y + 1

end
