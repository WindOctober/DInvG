variable [ x y z ]

Location l1
  x = 0
  y = 0

Location l2

Location le

transition t1_1: l1,l1,
	
   x <= 50
  'x <= 50
  'y >= 0
  'x  = x + 1
  'y  = y + 1

transition t1_2: l1,l2,

   x <= 50
  'x >= 51
  'y >= 0
  'x  = x + 1
  'y  = y + 1

transition t2_2: l2,l2,

   x >= 51
  'x >= 51
  'y >= 0
  'x  = x + 1
  'y  = y - 1

transition t2_e: l2,le,
	
   x >= 51
  'y <= -1
  'x  = x
  'y  = y - 1

end
